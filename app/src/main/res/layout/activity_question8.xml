<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2108867.trivia.Question8"
    android:background="#ff0000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 8"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How many letters are in this game?"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_below="@+id/textView20">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="over 9000! (again)"
            android:id="@+id/button21"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button22"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onNextClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="672"
            android:id="@+id/button23"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42"
            android:id="@+id/button24"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button25"
        android:layout_above="@+id/textView20"
        android:layout_toRightOf="@+id/textView17"
        android:background="#e60000"
        android:onClick="onWrongClick" />
</RelativeLayout>
