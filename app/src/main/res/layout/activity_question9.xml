<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2108867.trivia.Question9"
    android:background="#ff8000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Question"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is this the last question?"
        android:id="@+id/textView22"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_below="@+id/textView22">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hopefully"
            android:id="@+id/button26"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onNextClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES!"
            android:id="@+id/button31"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not press, you will fail"
            android:id="@+id/button32"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No!"
            android:id="@+id/button33"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onNextClick" />
    </LinearLayout>

</RelativeLayout>
