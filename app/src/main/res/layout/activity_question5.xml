<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2108867.trivia.Question5"
    android:background="#0000ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 5"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is the correct spelling of the fear of long words?"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Hippopoto-monstroses-quipedalio-phobia"
            android:id="@+id/button7"
            android:layout_gravity="center_vertical"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would I know?"
            android:id="@+id/button9"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Hipopoto-monstroses-quipedalio-phobia"
            android:id="@+id/button8"
            android:layout_gravity="center_vertical"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="the fear of long words"
            android:id="@+id/button10"
            android:layout_gravity="center_vertical"
            android:onClick="onNextClick" />
    </LinearLayout>
</RelativeLayout>
