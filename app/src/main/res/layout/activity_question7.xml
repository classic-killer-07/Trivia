<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2108867.trivia.Question7"
    android:background="#ff0080">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 7"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is 3 + 4?"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView19"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:id="@+id/button16"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 + 3"
            android:id="@+id/button17"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button18"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 + 4"
            android:id="@+id/button19"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:onClick="onWrongClick" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button20"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView19"
        android:background="#ff0080"
        android:onClick="onNextClick"
        android:layout_toRightOf="@+id/textView18"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19" />
</RelativeLayout>
