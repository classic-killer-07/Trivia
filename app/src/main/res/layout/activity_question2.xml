<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s2108867.trivia.Question2"
    android:id="@+id/main"
    android:background="#ff7f00">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 2"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click on the smallest"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:weightSum="1"
        android:layout_alignTop="@+id/textView6"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/Q2Y"
            android:onClick="onNextClick" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N3"
        android:layout_above="@+id/Q2N4"
        android:layout_alignLeft="@+id/Q2N4"
        android:layout_alignStart="@+id/Q2N4"
        android:layout_below="@+id/Q2N2"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N5"
        android:layout_below="@+id/Q2N4"
        android:layout_alignLeft="@+id/Q2N1"
        android:layout_alignStart="@+id/Q2N1"
        android:layout_above="@+id/Q2N7"
        android:layout_toLeftOf="@+id/Q2N4"
        android:layout_toStartOf="@+id/Q2N4"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N2"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_toRightOf="@+id/Q2N3"
        android:layout_toEndOf="@+id/Q2N3"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_toStartOf="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N1"
        android:layout_below="@+id/textView6"
        android:onClick="onWrongClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q2N6"
        android:layout_alignLeft="@+id/Q2N2"
        android:layout_alignStart="@+id/Q2N2"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_above="@+id/Q2N5"
        android:layout_below="@+id/Q2N2"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:onClick="onWrongClick" />

</RelativeLayout>
